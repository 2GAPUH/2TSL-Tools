{
  "manifest_version": 3,
  "name": "2TSL toolbox",
  "version": "0.4.0",
  "update_url": "http://158.160.227.37/BetterVolga/updates.xml",
  "description": "Удобное хранение собственных шаблонов омничат. Быстрый переход из ТТМ в форму ассистент. Удобный учёт заявок. Переход из Grafana на SSH. Напоминалка для заявок",
  "permissions": ["storage", "tabs", "notifications", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Управление расширением"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon.png", "edit.png", "delete.png", "copy.png", "paste.png"],
      "matches": ["https://omnichat.rt.ru/*", "https://www.ttm.rt.ru/*", "https://bzbti.rt.ru/*", "https://epd.rt.ru/*", "http://10.77.19.50/*", "http://10.144.39.131/*", "http://10.160.191.178/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://omnichat.rt.ru/*"],
      "js": ["content-omnichat.js", "content-accounting.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.ttm.rt.ru/*"],
      "js": ["content-ttm.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://bzbti.rt.ru/vip/ispolzovanie-assistenta/*"],
      "js": ["content-form.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://epd.rt.ru/stb-events/*"],
      "js": ["content-grafana.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://10.77.19.50/stb_ssh/*",
        "http://10.144.39.131/stb_ssh/*",
        "http://10.160.191.178/stb_ssh/*"
      ],
      "js": ["content-ssh.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://omnichat.rt.ru/*",
    "https://www.ttm.rt.ru/*",
    "https://bzbti.rt.ru/*",
    "https://epd.rt.ru/*",
    "http://10.77.19.50/*",
    "http://10.144.39.131/*",
    "http://10.160.191.178/*"
  ]
}
